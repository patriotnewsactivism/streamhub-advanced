# StreamHub Pro Environment Variables
# Copy this file to .env and fill in your values

# Database Configuration (Cloud SQL)
DB_NAME=streamhub
DB_USER=streamhub
DB_PASS=your-secure-password-here
INSTANCE_CONNECTION_NAME=wtp-apps:us-east1:streamhub-db-4beb

# Node Environment
NODE_ENV=production
PORT=8080

# Optional: Redis Configuration (for session management)
REDIS_HOST=your-redis-host
REDIS_PORT=6379

# Optional: Enable RTMP server (set to true for RTMP streaming)
ENABLE_RTMP=false

# Optional: Google Gemini API (for AI features)
GEMINI_API_KEY=your-gemini-api-key
