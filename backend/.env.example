# Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Secret (change this to a random secure string in production!)
JWT_SECRET=change-this-to-a-secure-random-string-in-production

# Database Configuration (Local)
DATABASE_URL=postgresql://streamhub:streamhub@localhost:5432/streamhub

# Database Configuration (Cloud SQL - for production)
# INSTANCE_CONNECTION_NAME=project:region:instance
# DB_USER=streamhub
# DB_PASS=your-secure-password
# DB_NAME=streamhub

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# RTMP Server (set to true to enable RTMP server)
# Note: RTMP server uses ports 1935 (RTMP) and 8000 (HLS)
# Cloud Run doesn't support multiple ports, so keep this false for Cloud Run
ENABLE_RTMP=false
